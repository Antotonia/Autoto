<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhangcx.springcloud.dao.PaymentMapper">
    <insert id="addPayment" useGeneratedKeys="true" parameterType="com.zhangcx.springcloud.entity.Payment" keyProperty="payment.id">
        insert into payment(id,serial,createTime) values(#{payment.id},#{payment.serial},#{payment.createTime});
    </insert>

    <resultMap id="paramPayment" type="com.zhangcx.springcloud.entity.Payment">
        <id column="id" property="id" javaType="String"></id>
        <id column="serial" property="serial" javaType="String"></id>
        <id column="createtime" property="createTime" javaType="String"></id>
    </resultMap>
    <select id="getPaymentById" parameterType="String" resultMap="paramPayment">
        select * from payment where id = #{id};
    </select>

</mapper>
